@using Ticket4.Models
  <!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">
        DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
                                                                   href="https://datatables.net">official DataTables documentation</a>.
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">

            <a asp-action="Create" class="btn btn-outline-success" >Add Position</a>
            <br>
            <br>
            
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    

                   
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Actions</th>
                            
                        </tr>
                    </thead>
                
                    <tbody>
                        
                            @foreach(Position position in Model)
                                {
                        <tr>
                                <td>@position.Id</td>
                                <td>@position.Name</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="Position" asp-action="Update" asp-route-id="@position.Id" class="btn btn-warning ">Update</a>
                                    <a asp-area="Admin" asp-controller="Position" asp-action="Delete" asp-route-id="@position.Id" class="btn btn-danger">Delete</a>
                                </td>
                        </tr>

                            }
                            
                            
                           
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
            </div>
<!-- End of Main Content -->
